<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black_transparent"
    android:backgroundTintMode="src_over"
    android:clickable="true"
    android:background="@drawable/blurbg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_50"
        android:layout_marginEnd="@dimen/dimen_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_close_app_drawer"
                android:layout_width="16dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_10"
                android:src="@drawable/ic_menu_close"
                android:visibility="gone"
                app:tint="@color/white" />

            <RelativeLayout
                android:id="@+id/ll_search_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_100"
                android:background="@drawable/menu_search_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/size_8">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSearchApps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_toStartOf="@+id/ivMic"
                    android:background="@null"
                    android:drawableStart="@drawable/search_icon_with_size"
                    android:drawablePadding="@dimen/size_36"
                    android:hint="@string/search_apps"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/size_20"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/ivMic"
                    android:layout_width="@dimen/size_22"
                    android:layout_height="@dimen/size_22"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/size_20"
                    android:visibility="gone" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRecentApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginTop="@dimen/size_30"
                android:gravity="center"
                android:text="@string/recently_used"
                android:textSize="@dimen/size_14"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_no_recentapps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_100"
                android:text="@string/no_apps_found"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_recent_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/padding_16"
                android:paddingBottom="@dimen/padding_16"
                android:scrollIndicators="right"
                android:scrollbarSize="@dimen/size_2"
                android:scrollbars="vertical" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAllApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_30"
                android:gravity="center"
                android:text="@string/all_apps"
                android:visibility="gone"
                android:textSize="@dimen/size_14"
                android:textStyle="normal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_app_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_10"
                android:focusable="true"
                android:paddingTop="@dimen/padding_16"
                android:paddingBottom="@dimen/padding_16"
                android:scrollIndicators="right"
                android:scrollbarSize="@dimen/size_2"
                android:scrollbars="vertical" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
